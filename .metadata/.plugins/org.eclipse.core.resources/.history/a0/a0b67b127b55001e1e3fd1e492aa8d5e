
public class Loops {

	public static void main(String[] args) {
		
		for(int i=1;i<=4;i++)  // No of Rows
		{
			for(int j=1;j<=i;j++)  //No of Columns
			{
				System.out.print(j);
			}
			System.out.println();
		}
		
		
		for(int i=0;i<4;i++)
		{
			for(int j=1;j<=4;j++)
			{
				System.out.print(j);
			}
			System.out.println();
		}

	}

}
